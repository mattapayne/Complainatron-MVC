<!DOCTYPE html>
<html>
<head>
    @RenderSection("OGTags", required: false)
    <title>@ViewBag.Title</title>
    <link type="text/css" rel="Stylesheet" href="@Url.Content("~/Content/Css/default.css")" />
    <link href="@Url.Content("~/Content/Css/jquery-ui-1.8.16.custom.css")" rel="stylesheet" type="text/css" />
    <link type="text/css" rel="Stylesheet" href="@Url.Content("~/Content/Css/jquery.loadmask.css")" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.16.custom.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.livequery.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.loadmask.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/shared/core.js")" type="text/javascript"></script>
    @RenderSection("HeaderContent", required: false)
</head>
<body style="overflow: hidden">
    <div class="main">
        <div class="container">
            @Html.FacebookSignedRequest()
            @Html.Hidden("FriendsLink", Url.Action("Index", "Friends"))
            @Html.Hidden("ComplainLink", Url.Action("Complain", "Complaint"))
            @Html.Hidden("MapLink", Url.Action("Index", "Map"))
            @Html.Hidden("ChartLink", Url.Action("Index", "Chart"))
            @Html.Hidden("AboutLink", Url.Action("About", "Main"))
            <div class="menu">
                <a href="@Url.CanvasAction("Index", "Complaint")" id="home" title="Home" target="_top"><span>Home</span></a>
                <a href="#" id="complain" title="Submit a complaint"><span>Complain</span></a>
                <a href="#" id="about" title="About Complainatron"><span>About</span></a>
                <a href="#" id="map" title="See complaints on a map"><span>Map</span></a> 
                <a href="#" id="chart" title="See complaints on a chart"><span>Chart</span></a>
                <a href="#" id="friends" title="See your friends' complaints"><span>Friends</span></a>
            </div>
            <div class="content">
                @RenderBody()
            </div>
            <div id="footer">
                &copy; Complainatron 2012
            </div>
        </div>
    </div>
    @Html.Partial("_Facebook")
</body>
</html>
