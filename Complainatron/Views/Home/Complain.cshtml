@model dynamic
@{
    ViewBag.Title = "Complain";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section HeaderContent
{
    <script src="http://code.google.com/apis/gears/gears_init.js" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/home.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/complain.js")" type="text/javascript"></script>
}
<div class="page">
    <div id="header">
        <div id="title">
            <h1>
                Complainatron</h1>
        </div>
    </div>
    <div id="left">
        <form action="complain" method="post" id="complaint-form">
        <input type="hidden" id="latitude" name="latitude" />
        <input type="hidden" id="longitude" name="longitude" />
        <p>
            <label for="username">
                Your name:</label>
            <input type="text" name="username" id="username" />
        </p>
        <p>
            <label for="complaintText">
                Complain here:</label>
            <textarea id="complaintText" name="complaintText" rows="3" cols="40"></textarea>
        </p>
        </form>
    </div>
    <div id="map-area">
        <h2>
            Your Location</h2>
        <div id="map">
        </div>
    </div>
    <div class="clear">
    </div>
    <div id="submit">
        <input type="button" name="submit" id="submit" value="Submit" />
    </div>
</div>
