@model IEnumerable<Complainatron.Models.TagViewModel>
@if (Model.Any())
{
    <div class="tag-cloud" id="tags">
        <h2>
            Tags</h2>
        @foreach (var tag in Model)
        {
            <span class="tag">@Html.CanvasActionLink(tag.Name, "Tag", "Complaint", new { id = tag.Id }, null)</span>
        }
    </div>
}